@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/HouseLayout.cshtml";
}

@using QLKS_CNPM_LT.Models.ViewModel
@model TaiKhoanDangNhapView

<link href="~/Content/Mystyle/Register.css" rel="stylesheet" />
<style>
    .field-validation-error {
        color: red;
    }
</style>
<h1 style="text-align:center;margin-bottom:20px">Đăng nhập</h1>
<div class="center">

    <form action="" method="post">
        <div class="group">
            <input name="Gmail" type="text" value="@Model.Gmail">
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="">@Html.ValidationMessageFor(m => m.Gmail)</span>
            <label class="lab">Địa chỉ email</label>
        </div>


        <div class="group">
            <input name="PASS" type="password">
            <span class="highlight"></span>
            <span class="bar"></span>
            <label class="lab">Mật khẩu</label>
            <span class="canh-bao">@Html.ValidationMessageFor(m => m.PASS)</span>
        </div>

        <div class="group">
            <label for="checkbox" class="checkbox-style">
                <input type="checkbox"
                       name="evondev"
                       id="checkbox"
                       class="checkbox-input" />
                <div class="checkbox-box">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         class="h-5 w-5"
                         viewBox="0 0 20 20"
                         fill="currentColor">
                        <path fill-rule="evenodd"
                              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                              clip-rule="evenodd" />
                    </svg>
                </div>
                <label for="checkbox" name="TuDongDangNhap" id="TuDongDangNhap" class="checkbox-label">Check</label>
            </label>
        </div>

        <input type="submit" name="submit" class="btn btn-primary" value="Đăng nhập" />
    </form>

</div>


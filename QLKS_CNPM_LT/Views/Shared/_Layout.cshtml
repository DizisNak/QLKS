<!DOCTYPE html>
<html lang="en">
<head>
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Abel Feel like home</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@
    <link rel="stylesheet" href="~/Content/Mystyle/Main.css">
    <link rel="Stylesheet" href="/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    @using QLKS_CNPM_LT.Models
</head>
<body>

    <div class="Container">


        <div class="Header" id="Header">
            <span href="" class="logo ">
                <img src="~/Content/images/Abel.png" />
            </span>



            <div id="Menu">
                <div class="item">
                    <a class="none" href="/">TRANG CHỦ</a>
                </div>
                <div class="item">
                    <div class="dropdown">
                        <a class="none" href="/Phong/DSPhong">DANH SÁCH PHÒNG</a>
                        <div class="dropdown-content">
                            <div class="_column">
                                @*@{Html.RenderAction("LoaiPhongPartial", "Phong");}*@
                            </div>
                        </div>
                    </div>


                </div>
                <div class="item">
                    <a class="none" href="#footer">LIÊN HỆ</a>
                </div>
            </div>





            <div id="Action">
                @if (Session["TaiKhoan"] == null)
                {
                    <div class="item">
                        <div class="dropdown">
                            <span class="dropbtn"><i class="fa fa-user"></i></span>
                            <div class="dropdown-content_user" style="left:0;">
                                <a href="/TaiKhoan/DangNhap"><ion-icon name="log-in-outline"></ion-icon> Đăng nhập</a>
                                <a href="/TaiKhoan/DangKy"><ion-icon name="person-add-outline"></ion-icon> Đăng ký</a>
                            </div>
                        </div>
                    </div>
                }
                else if ((((TAIKHOAN)Session["TaiKhoan"]).LOAITK.Trim() == "AD"))
                {
                    <div class="item">
                        <div class="dropdown">
                            <button class="dropbtn">Hello @(((TAIKHOAN)Session["TaiKhoan"]).TenTK)</button>
                            <div class="dropdown-content_user" style="left:0;">
                                <a href="@Url.Action("CaNhan","TaiKhoan")"><ion-icon name="log-out-outline"></ion-icon>Thông tin cá nhân</a>
                                <a href="@Url.Action("DSTaiKhoan","Admin")"><ion-icon name="log-out-outline"></ion-icon>Trang ADMIN</a>
                                <a href="@Url.Action("DangXuat","TaiKhoan")"><ion-icon name="log-out-outline"></ion-icon>Đăng suất</a>
                            </div>
                        </div>
                    </div>
                }

                else
                {
                    <div class="item">
                        <div class="dropdown">
                            <button class="dropbtn">Hello @(((TAIKHOAN)Session["TaiKhoan"]).TenTK)</button>
                            <div class="dropdown-content_user" style="left:0;">
                                <a href="@Url.Action("CaNhan","TaiKhoan")"><ion-icon name="log-out-outline"></ion-icon>Thông tin cá nhân</a>
                                <a href="@Url.Action("LichSu","TaiKhoan")"><ion-icon name="log-out-outline"></ion-icon>Lịch sử đặt phòng</a>
                                <a href="@Url.Action("DangXuat","TaiKhoan")"><ion-icon name="log-out-outline"></ion-icon>Đăng suất</a>
                            </div>
                        </div>
                    </div>
                }

            </div>


        </div>

        <div id="Banner">
            <div class="box-left">

                <h2>Khách SẠN HUYỀN BÍ</h2>
                <p>Feel like home</p>

            </div>



        </div>


        <div id="Products">

            @RenderBody()

        </div>


        <div id="footer" class="">
            <div class="box">
                <div class="logo">
                    <img src="~/Content/images/ABEL.png" />
                    <p></p>
                </div>
            </div>

            <div class="box">
                <h3>Members</h3>
                <ul class="quick-menu">
                    <div class="item">

                    </div>
                </ul>
            </div>



        </div>

    </div>


    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="~/Scripts/MyJs/MyJs.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
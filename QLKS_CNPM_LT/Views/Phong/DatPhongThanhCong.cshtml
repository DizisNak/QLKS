@{
    ViewBag.Title = "Đặt Phòng Thành Công";
    Layout = "~/Views/Shared/HouseLayout.cshtml";
    ViewBag.DiaChi = 1;
}

@{ 
    decimal Total = (decimal)ViewBag.ThanhTien;
    decimal money = (decimal)ViewBag.GIA;
}

@using QLKS_CNPM_LT.Models
<link rel="Stylesheet" href="~/Content/MyStyle/TaiKhoan.css" />
<h3>Bạn Đã Đặt Phòng Thành Công!</h3>
<div class="container dat-phong-thanh-cong">
    <p>Tài Khoản <span style="color: blue;">@(((TAIKHOAN)Session["TaiKhoan"]).TenTK)</span> đã đặt thành công!</p>
    <table class="bang-dang-ky-thanh-cong bang-dat-phong-thanh-cong">
        <colgroup>
            <col style="width: 40%" />
            <col style="width: 60%" />
        </colgroup>
        <tbody>
            <tr><th>Phòng:</th><th><span style="color: #8A2BE2">@ViewBag.TenPhong</span></th></tr>
            <tr><th>Giá/Đêm:</th><th><span style="color: #D2691E">@money.ToString("#,##0").Replace(',', '.') VNĐ/Đêm</span></th></tr>
            <tr><th>Ngày Đặt:</th><th><span style="color: #008000">@ViewBag.NgayDat</span></th></tr>
            <tr><th>Từ Ngày:</th><th><span style="color: #FF4500">@ViewBag.NgayDen</span></th></tr>
            <tr><th>Đến Ngày:</th><th><span style="color: #669900">@ViewBag.NgayTra</span></th></tr>
            <tr><th>Tổng tiền:</th><th><span style="color: #e6004c">@Total.ToString("#,##0").Replace(',', '.') VNĐ</span></th></tr>
        </tbody>
    </table>
    <p><a href="/"><span style="color: #0000CC;">Quay Về Trang Chủ</span></a></p>
</div>

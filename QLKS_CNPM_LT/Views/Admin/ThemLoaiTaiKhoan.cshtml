
@{
    ViewBag.Title = "ThemLoai";
    Layout = "~/Views/SharedAdmin/_Layout.cshtml";
}

@using QLKS_CNPM_LT.Models
@model LOAITAIKHOAN


<script>
    var element = document.getElementById("collapse4");
    element.classList.add("in");
</script>

<h2 style="text-align:center">Thêm tài khoản</h2>

<div class="container">
    <form action="" method="post" enctype="multipart/form-data">
        @*<input class="form-control dang-nhap-text" type="text" name="ID_TK" value="@Model.ID_TK" />*@

        <div class="form-group">
            <label>ID Loại tài khoản:</label>
            <input class="form-control dang-nhap-text" type="text" name="ID_LOAITK" value="@Model.ID_LOAITK" />
            <span style="color:red">@Html.ValidationMessageFor(m => m.ID_LOAITK)</span>
        </div>
        <div class="form-group">
            <label>Tên loại tài khoản:</label>
            <input class="form-control dang-nhap-text" type="text" name="TENLOAITK" value="@Model.TENLOAITK" />
            <span style="color:red">@Html.ValidationMessageFor(m => m.TENLOAITK)</span>
        </div>


        <div class="form-group">
            <input class="btn btn-ok" type="submit" value="Thêm Mới" />
        </div>

    </form>
</div>